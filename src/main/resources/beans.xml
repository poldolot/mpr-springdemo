<?xml version="1.0" encoding="UTF-8"?>
<beans
    xmlns="http://www.springframework.org/schema/beans"
	xmlns:context="http://www.springframework.org/schema/context"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.springframework.org/schema/beans
                        http://www.springframework.org/schema/beans/spring-beans-3.2.xsd
		                http://www.springframework.org/schema/context
                        http://www.springframework.org/schema/context/spring-context-3.2.xsd">

	<!-- W base-package szuka wystąpień adnotacji @Components i dokonuje konfiguracji -->
	<context:component-scan base-package="mpr.lect.spring.springdemo.service" />

	<bean id="zosia" class="mpr.lect.spring.springdemo.domain.Person">
		<property name="firstName" value="Zosia" />
		<property name="yob" value="1987" />
	</bean>

</beans>
